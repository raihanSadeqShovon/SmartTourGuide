<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context="cryptenet.thanatos.smart_tour_guide.fragments.ResultFragment">

    <TextView
        android:id="@+id/tv_tour_plan_suggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_f_standard_margin_vertical_min"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv_tour_plan_suggestions"
        android:textSize="15sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_f_standard_margin_vertical"
        android:scrollbars="vertical"/>

</LinearLayout>
